/* components/home/home.wxss */
@import "../../app.wxss";
.body-view {
  padding: 32rpx;
  font-size: 36rpx;
  color: #666;
}
swiper {
  /* height: 400rpx; */
  width: 100%;
}

.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: 2rpx; 
}
.swiper-box .wx-swiper-dot{
    width:20rpx;
    display: inline-flex;
    height: 20rpx;
    margin-left: 6rpx;
    justify-content:space-between;
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1;
    background: rgba(255,255,255,0.8);
    border-radius: 10rpx;
}
.swiper-box .wx-swiper-dot-active::before{
    background:#ff6682;  
}
swiper-item {
  overflow: auto !important;
  height: auto;
}

swiper image {
  height: 100%;
  width: 100%;
}




.content {
  width: 100%;
  margin-top: 30rpx;
  height: 350rpx;
  text-align: center;
  color: #000;
  font-size: 40rpx;
}

.news {
  width: 100%;
  color: #000;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  padding-top: 60rpx;
  display: none;
}

.news text {
  padding-left: 30rpx;
}

.news.fix-news {
  position: fixed;
  top: 0;
  width: 100%;
  height: 80rpx;
  left: 0;
  background: #fff;
  margin-bottom: 150rpx;
  display: block;
}
