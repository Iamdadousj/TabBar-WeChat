/* components/dialog/dialog.wxss */

.dialog-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
}

.dialog-info {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
}

.dialog-info image {
  width: 120rpx;
  height: 120rpx;
  margin-top: 45rpx;
  margin-bottom: 45rpx;
}

.dialog-title {
  font-size: 36rpx;
  padding: 30rpx 30rpx 10rpx;
}

.dialog-content {
  padding: 10rpx 30rpx 20rpx;
  min-height: 80rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  word-wrap: break-word;
  word-break: break-all;
  margin-bottom: 36rpx;
  color: #999;
}

.dialog-footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 90rpx;
  font-size: 34rpx;
}

.dialog-btn {
  display: block;
  -webkit-flex: 1;
  flex: 1;
  position: relative;
  color: #3cc51f;
}

.dialog-btn {
  outline: none !important;
  font-size: 36rpx;
  line-height: 78rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
}

button::after {
  border: none;
}
