/* components/tag/tag.wxss */

.container{
    padding: 0;
}
.content{
    width: 100%;
    height: 400rpx;
    text-align: center;
    color: #000;
    font-size: 40rpx;
    line-height: 400rpx;   
}
.news{
    width: 100%;
    color: #000;
    font-size: 24rpx; 
    text-align: center;
  line-height: 50rpx;
  padding-top: 60rpx;
  display: none;
}
.news text{
    padding-left: 30rpx;
}
.news.fix-news {
  position: fixed;
  top: 0;
  width: 100%;
  height: 80rpx;
  left: 0;
  background: #fff;
  margin-bottom: 150rpx;
  display: block;
}
.news-list{
    width: 100%;
}
.news-list view{
    padding: 0 30rpx;
    line-height: 160rpx;
    text-align: left;
    border-bottom: 2rpx solid #ccc;
}
.news-list view:nth-last-child(1){
    border-bottom: 0;
}